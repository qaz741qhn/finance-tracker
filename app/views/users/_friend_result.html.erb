<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class= "card card-header results-block">
    <table class="table table-bordered table-hover table-block">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Profile</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td><%= link_to 'View profile', user_path(friend), class: "btn btn-xs btn-success" %></td>
            <% if current_user.not_friend_with?(friend.id) %>
              <td><%= link_to 'Follow Friend', friendships_path(friend: friend), class: "btn btn-xs btn-success", method: :post %></td>
            <% else %>
              <td class="badge bg-light text-dark">You are already friends</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>