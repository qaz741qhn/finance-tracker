<% if @friends.present? %>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered table-hover table-block">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Profile</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.email %></td>
              <td><%= friend.first_name %></td>
              <td><%= friend.last_name %></td>
              <td><%= link_to 'View profile', user_path(friend) %></td>
              <td><%= link_to 'Stop following', friendship_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>